extends layout

block content
    h1 #{title}: #{bookinstance.book.title}
    hr
    p Do you really want to delete this copy of #{bookinstance.book.title}?
    p (#{bookinstance.imprint})
    form(method='POST' action='')
        div.form-group
            input#bookinstanceid.form-control(
                type='hidden'
                name='bookinstanceid'
                required='true'
                value=bookinstance._id
            )
        button.btn.btn-danger Delete